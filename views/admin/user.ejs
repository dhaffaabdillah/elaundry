<%- include('../partials/head'); %>
<body class="">
    <div class="page-container">
        <%- include('../partials/sidebar'); %>
        <div class="page-content">
        <%- include('../partials/headerNew'); %>

            <!-- main content disini -->
            <div class="main-wrapper">
                <div class="row">
                    <div class="col">
                        <div class="col-7">
                            <h3>All Users</h3>
                        </div>

                        <div class="col-5">
                            <a href="/admin/user-list/create" class="btn btn-success">Tambah User</a>    
                        </div>
                        
                        <table id="dtableorders" class="display" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Role</th>
                                    <th>Email</th>
                                    <th>Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i = 0; i < data.length; i++){ %>
                                <tr>
                                    <td><%= data[i].USERNAME %></td>
                                    <td><%= data[i].EMAIL %></td>
                                    <td><%= data[i].ROLE %></td>
                                    <td>
                                        <form action="/admin/user-list/delete/<%= data[i].ID %>?_method=DELETE" method="POST">
                                            <a href="/admin/user-list/<%= data[i].ID %>/edit" class="btn btn-primary">Edit</a>
                                            <a href="/admin/user-list/<%= data[i].ID %>/detail" class="btn btn-success">Detail</a>
                                            <button type="submit" class="btn btn-danger" onclick="return confirm('Apakah anda yakin ingin menghapus <%= data[i].IdOrders %>')" >Delete</button>
                                        </form>

                                    </td>
                                </tr>
                                <%} %>
                            </tbody>
                        </table>

                    </div>

                    
                </div>
            </div>
            <!-- end main content -->
            <%- include('../partials/footer'); %>
                              
        </div>
    </div>


    </div>
</body>
<%- include('../partials/script'); %>
<script type="text/javascript">
$(document).ready(function() {
    "use strict"
    $('#dtableorders').DataTable()
})
</script>
</html>