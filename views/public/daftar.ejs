<%- include('./public-partials/head'); %>
<%- include('./public-partials/navbar'); %>

<!-- Page Start -->
	<section class="m-t-100 m-b-200 h-full">

        <!-- Right Start -->
		<div class="d-flex align-items-center justify-content-center">
			<div class="container-fluid">
				<div class="row d-flex justify-content-center">
					<div class="col-lg-8 col-md-8">
						<div class="">
                            <div class="col-lg-12">
								<div class="form-item m-b-30">
                                    <h1 class="text-primary">Daftar Akun</h1>
                                    <p class="m-b-40">Silahkan masukkan data dibawah ini untuk mendaftar</p>
                                </div>
							</div>
                        <form action="/daftar" method="post">
                            <div class="col-12 form-item row m-b-15">
                                <div class="col-lg-6 col-sm-12">
                                    <div class="form-item sm-m-b-30">
                                        <label class="lbl" for="form1">Nomor Telepon</label>
                                        <input class="input" type="number" name="notelp" id="form1" placeholder="Nomor Telepon" required/>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-sm-12">
                                    <div class="form-item sm-m-b-30">
                                        <label class="lbl" for="form1">Email</label>
                                        <input class="input" type="email" name="email" id="form1" placeholder="Email" required/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 row form-item row m-b-15">
                                <div class="col-lg-12 col-sm-12">
                                    <div class="form-item sm-m-b-30">
                                        <label class="lbl" for="form2">Password</label> <!-- <a class="pull-right link-small text-capitalize" href="recover-account.html">Forgot Password?</a> -->
                                        <input class="input" type="password" name="password" id="form2" placeholder="Password" required/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 form-item row m-b-15">
                                <div class="col-lg-7 col-sm-12">
                                    <div class="form-item sm-m-b-30">
                                        <label class="lbl" for="form1">Nama Lengkap</label>
                                        <input class="input" type="text" name="namalengkap" id="form1" placeholder="Nama Lengkap" required/>
                                    </div>
                                </div>
                                <div class="col-lg-5 col-sm-12">
                                    <div class="form-item sm-m-b-30">
                                        <label class="lbl" for="form1">Kode Pos</label>
                                        <input class="input" type="number" name="kodepos" id="form1" placeholder="Kode Pos" required/>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 row form-item row m-b-15">
                                <div class="col-lg-12 col-sm-12">
                                    <div class="form-item sm-m-b-30">
                                        <label class="lbl" for="form3">Alamat</label>
                                        <textarea class="textarea" id="form3" name="alamat" rows="7" placeholder="Alamat"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 row m-b-15">
                                <div class="col-lg-12 col-sm-12">
                                    <div class="form-item sm-m-b-30">
                                        <button type="submit" class="button button-primary transition-3d-hover ">Daftar</button>
                                    </div>
                                </div>
                            </div>
						</div>
                        </form>
					</div>
				</div>
                <div class="row d-flex align-items-center justify-content-end">
                    <div class="col-4">
                    </div>
                </div>
			</div>
		</div>
		<!-- Right End -->
	</section>
	<!-- Page End -->

<%- include('./public-partials/footer'); %>
<%- include('./public-partials/script'); %>